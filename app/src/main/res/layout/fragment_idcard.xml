<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:asura="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center"
              android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_cardNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        asura:tabBackground="@color/colorPrimary"
        asura:tabGravity="fill"
        asura:tabIndicatorColor="@color/white"
        asura:tabMode="fixed"
        asura:tabSelectedTextColor="@color/white"
        asura:tabTextColor="@color/white_light"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_cardNo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>